<% @products.each do |product|%>
<div class="container-fluid">
	<div class="row" style="margin:20px; ">
		<div class="col-sm-3 col-md-3 col-xs-12 col-lg-3 text-center">
			<h1 ><%=product.title%></h1>
		</div>
		<div class="col-sm-2 col-md-3 col-xs-12 col-lg-2 space">
					<a><%= link_to image_tag(product.product_images.first.p_images.url(:small)), product_path(product.id), :class=>"img-responsive"%></a>
		</div>
	</div>
</div>
<%end%>

