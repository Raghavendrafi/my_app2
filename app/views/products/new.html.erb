<h1>Add Product</h1>	
	
	<%= form_for @product do |f|%>
	<div>
	<%= f.label :title%> 
	<%= f.text_field :title %></br>
	</div>

	<div>
	<%= f.label :price%> 
	<%= f.text_field :price %></br>
	</div>


    <div>
	<%= collection_select(:product,:category_id, Category.all, :id, :name,{:prompt => 'Select'})%></br>
	</div>

	<div>
	<%= submit_tag "Submit"%>
	</div>

<%end%>

